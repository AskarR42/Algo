public class PlacementOfQueens {

    private int n;
    private boolean[] col;
    private boolean[] diag1;
    private boolean[] diag2;
    private int counter;

    PlacementOfQueens(int n) {
        this.n = n;
        col = new boolean[n];
        diag1 = new boolean[2 * n - 1];
        diag2 = new boolean[2 * n - 1];
        counter = 0;
    }

    public int count() {
        solve(0);
        return counter;
    }

    private void solve(int y) {
        if (y == n) {
            counter++;
        } else {
            for (int x = 0; x < n; x++) {
                if (col[x] || diag1[x + y] || diag2[x - y + n - 1]) {
                    continue;
                }
                col[x] = diag1[x + y] = diag2[x - y + n - 1] = true;
                solve(y + 1);
                col[x] = diag1[x + y] = diag2[x - y + n - 1] = false;
            }
        }
    }
}
